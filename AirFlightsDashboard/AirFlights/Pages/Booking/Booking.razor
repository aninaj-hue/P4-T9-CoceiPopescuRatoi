@page "/booking"


@inherits BaseComponent

<PageTitle>Booking</PageTitle>

<Div Class="booking" Display="new FluentDisplay().Flex">
    <Div Class="row">
        <Div Class="col-md-6 col-sm-3">
            <Form>
                <Fields>
                    <Card Class="booking-form">
                        <CardHeader>
                            <CardTitle Size="3">
                                From
                            </CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Country
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Romaina</SelectItem>
                                        <SelectItem>Grace</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    City
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Sibiu</SelectItem>
                                        <SelectItem>Atena</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Airport
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Henry</SelectItem>
                                        <SelectItem>Atena</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                        </CardBody>
                    </Card>
                    <Card Class="booking-form">
                        <CardHeader>
                            <CardTitle Size="3">
                                To
                            </CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Country
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Romaina</SelectItem>
                                        <SelectItem>Grace</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    City
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Sibiu</SelectItem>
                                        <SelectItem>Atena</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Airport
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>Henry</SelectItem>
                                        <SelectItem>Atena</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                        </CardBody>
                    </Card>
                    <Card Class="booking-form">
                        <CardHeader>
                            <CardTitle Size="3">
                                Preferred Airline
                            </CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Name
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>American Airline</SelectItem>
                                        <SelectItem>Delta Airline</SelectItem>
                                        <SelectItem>Frontier Airline</SelectItem>
                                        <SelectItem>Jet Blue</SelectItem>
                                        <SelectItem>Southwest Airlines</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Route
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>American Airline</SelectItem>
                                        <SelectItem>Delta Airline</SelectItem>
                                        <SelectItem>Frontier Airline</SelectItem>
                                        <SelectItem>Jet Blue</SelectItem>
                                        <SelectItem>Southwest Airlines</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                        </CardBody>
                    </Card>
                    <Card Class="booking-form">
                        <CardHeader>
                            <CardTitle Size="3">
                                Departure Data
                            </CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Departure date
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>12/03/2024</SelectItem>
                                        <SelectItem>12/05/2024</SelectItem>
                                        <SelectItem>20/07/2024</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Hour
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>12:00</SelectItem>
                                        <SelectItem>16:00</SelectItem>
                                        <SelectItem>20:00</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                        </CardBody>
                    </Card>
                    <Card Class="booking-form">
                        <CardHeader>
                            <CardTitle Size="3">
                                Return Data
                            </CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Return date
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>12/03/2024</SelectItem>
                                        <SelectItem>12/05/2024</SelectItem>
                                        <SelectItem>20/07/2024</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                            <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                                <FieldLabel>
                                    Hour
                                </FieldLabel>
                                <FieldBody>
                                    <Select TValue="string">
                                        <SelectItem>12:00</SelectItem>
                                        <SelectItem>16:00</SelectItem>
                                        <SelectItem>20:00</SelectItem>
                                    </Select>
                                </FieldBody>
                            </Field>
                        </CardBody>
                    </Card>
                    <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                        <FieldLabel>
                            Adult(12+ yrs)
                        </FieldLabel>
                        <FieldBody>
                            <Select TValue="string">
                                <SelectItem>1</SelectItem>
                                <SelectItem>2</SelectItem>
                                <SelectItem>3</SelectItem>
                                <SelectItem>4</SelectItem>
                                <SelectItem>5+</SelectItem>
                            </Select>
                        </FieldBody>
                    </Field>
                    <Field ColumnSize="ColumnSize.IsFull.OnTablet.IsHalf.OnDesktop">
                        <FieldLabel>
                            Infant(under 2 yrs)
                        </FieldLabel>
                        <FieldBody>
                            <Select TValue="string">
                                <SelectItem>1</SelectItem>
                                <SelectItem>2</SelectItem>
                                <SelectItem>3</SelectItem>
                                <SelectItem>4</SelectItem>
                                <SelectItem>5+</SelectItem>
                            </Select>
                        </FieldBody>
                    </Field>
                </Fields>
                <Field>
                    <FieldLabel>
                        Any Message...
                    </FieldLabel>
                    <FieldBody>
                        <MemoEdit Placeholder="Your message here" Rows="2" />
                    </FieldBody>
                </Field>
                <Field>
                    <Button Class="booking-btn">
                        Show flights
                    </Button>
                </Field>

            </Form>
        </Div>
        <Div Class="col-md-6 col-sm-5">
            <Div class="booking-txt" TextAlignment="TextAlignment.Center">
                <h2>Planing <br /> Trip <br /> To <br />  Anywhere <br /> in <br /> The <br /> World?</h2>
            </Div>
        </Div>
    </Div>
</Div>

