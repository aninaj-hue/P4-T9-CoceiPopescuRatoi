@page "/login"
@inherits ComponentBase
@implements IDisposable

<PageTitle>Login</PageTitle>

<Div Margin="Margin.IsAuto.OnX" class="login container ">
    <Heading Size="HeadingSize.Is2" Margin="Margin.Is3.FromBottom" TextAlignment="TextAlignment.Center">
        Sign into your account
    </Heading>
    <br/>
    <Div class="row">
        <Div class="col-sm-6">
            <Image src="../images/blog/contact1.jpg" alt="placeholder" Style="height: 300px; width: 700px; align-content: center"></Image>
        </Div>
        <Div class="col-sm-6">
            <Card Shadow="Shadow.Default">
                <CardBody>
                    <Form @ref="form">
                        <Validations @ref="validations" Mode="ValidationMode.Manual" Model="@_loginModel">
                        <Validation>
                            <Field>
                                <FieldLabel>
                                    Username
                                </FieldLabel>
                                <FieldBody>
                                    <TextEdit ElementId="login_username" Placeholder="Enter your username" Role="TextRole.Text" @bind-Text="_loginModel.Username">
                                    <Feedback>
                                        <ValidationError ElementId="required_username" />
                                    </Feedback>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Validation>
                        <Field>
                            <FieldLabel>
                                Password
                            </FieldLabel>
                            <FieldBody>
                                <TextEdit ElementId="password_login" Placeholder="********" Role="TextRole.Password" @bind-Text="_loginModel.Password" autocomplete="new-password">
                                <Feedback>
                                    <ValidationError ElementId="required_password" />
                                </Feedback>
                                </TextEdit>
                            </FieldBody>
                        </Field>
                            </Validation>
                        <Field>
                            <Button ElementId="login_button" Color="Color.Primary" Block Clicked="@SignInAsync">
                                Sign in
                            </Button>
                        </Field>
                        <Field>
                            Donâ€™t have an account yet? <Anchor To="/register" TextColor="TextColor.Primary">Sign up</Anchor>
                        </Field>
                        </Validations>
                    </Form>
                </CardBody>
            </Card>
        </Div>
    </Div>
</Div>


